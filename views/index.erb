<h2>Todo Tweeter</h2>
<form id="description" action="/" method="post">
  <input type="text" name="description" class="description"/>
  <input type="submit" value="Add"/>
</form>
<table class="todo-items">
  <thead>
    <tr>
      <th>Done</th>
      <th>Description</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @todo_item.finished %></td>
      <td><%= @todo_item.description %></td>
      <td>Check</td>
    </tr>
  </tbody>
</table>
</div>
