<html>
  <head>
    <link href='http://fonts.googleapis.com/css?family=Montserrat' rel='stylesheet' type='text/css'>
    <link href='css/index.css' rel='stylesheet' type='text/css'>
  </head>
  <body>
    <div class="container">
      <h2>Todo-Tweeter - tweet what you get done</h2>
      <form action="/" method="post">
        <input type="text" name="todo_item" class="description"/>
        <input type="submit" placeholder="Add todo items here" value="Add"/>
      </form>
      <table class="todo-items">
        <thead>
          <tr>
            <th>Done</th>
            <th>Description</th>
          </tr>
        </thead>
        <tbody>
          <% @todo_items.each do |todo_item| %>
            <tr>
              <td><%= todo_item.finished %></td>
              <td><%= todo_item.description %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </body>
</html>
