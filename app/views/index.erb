<h2>Todo-Tweeter - tweet your life</h2>
<form action="/" method="post">
  <input type="text" name="description" class="description"/>
  <input type="submit" placeholder="Add todo items here" value="Add"/>
</form>
<table class="todo-items">
  <thead>
    <tr>
      <th>Done</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
    <% @todo_items.each do |todo_item| %>
      <tr>
        <td><%= todo_item.finished %></td>
        <td><%= todo_item.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
